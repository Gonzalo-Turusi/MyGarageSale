@using MyGarageSale.Components

<!-- Navegación principal -->
<nav class="bg-blue-800 shadow-lg">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between h-16">
            <!-- Logo y nombre -->
            <div class="flex items-center">
                <NavLink href="" class="flex items-center gap-3 text-white hover:text-blue-200 transition-colors">
                    <svg class="w-8 h-8" fill="currentColor" viewBox="0 0 20 20">
                        <path d="M3 4a1 1 0 011-1h12a1 1 0 011 1v2a1 1 0 01-1 1H4a1 1 0 01-1-1V4zM3 10a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1H4a1 1 0 01-1-1v-6zM14 9a1 1 0 00-1 1v6a1 1 0 001 1h2a1 1 0 001-1v-6a1 1 0 00-1-1h-2z"></path>
                    </svg>
                    <span class="text-xl font-bold">Venta Gonza y Yenny</span>
                </NavLink>
            </div>

            <!-- Navegación desktop -->
            <div class="hidden md:flex items-center space-x-6">
                <!-- Widget del carrito -->
                <CartWidget />
            </div>

            <!-- Botón de menú móvil -->
            <div class="md:hidden flex items-center">
                <CartWidget />
                <button @onclick="ToggleMobileMenu" 
                        class="ml-2 text-white hover:text-blue-200 focus:outline-none">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                              d="M4 6h16M4 12h16M4 18h16"></path>
                    </svg>
                </button>
            </div>
        </div>
    </div>

    <!-- Menú móvil -->
    <div class="md:hidden @(showMobileMenu ? "block" : "hidden")">
        <div class="px-2 pt-2 pb-3 space-y-1 bg-blue-900">
            <div class="text-center text-white py-2">
                <span class="text-sm">Haz clic en el logo para ir al catálogo</span>
            </div>
        </div>
    </div>
</nav>

@code {
    private bool showMobileMenu = false;

    private void ToggleMobileMenu()
    {
        showMobileMenu = !showMobileMenu;
    }

    private void CloseMobileMenu()
    {
        showMobileMenu = false;
    }
}

