@inherits LayoutComponentBase

<div class="min-h-screen bg-gray-50">
    <NavMenu />
    
    <main class="mx-auto max-w-7xl px-4 py-6 sm:px-6 lg:px-8">
        @Body
    </main>
    
    <!-- Footer -->
    <footer class="bg-gray-50 border-t mt-16">
        <div class="container mx-auto px-4 py-8 text-center">
            <p>&copy; @DateTime.Now.Year Venta Gonza y Yenny. Encuentra las mejores ofertas en artículos usados.</p>
            <p class="text-sm text-gray-500 mt-2">Desarrollado por <span class="font-medium text-indigo-600">NekoClick</span> 🐱</p>
        </div>
    </footer>
</div>

<div id="blazor-error-ui" data-nosnippet class="blazor-error-boundary">
    An unhandled error has occurred.
    <a href="." class="reload">Reload</a>
    <span class="dismiss">🗙</span>
</div>
